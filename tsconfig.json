{
  "compilerOptions": {
    "module": "node16",
    "target": "es2020",
    "outDir": "dist/cjs",
    "declarationDir": "dist/types",
    "lib": [
      "es2020"
    ],
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
  },
  "include": ["src/**/*.ts"]
}